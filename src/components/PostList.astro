---
import {
  parseAndSortBlogPosts,
  parseAndSortProjectPosts,
  formatDate,
} from "../lib/post";
import TagList from "./TagList.astro";

interface Props {
  directory: "blog" | "projects";
  limit?: number;
}

const { directory, limit } = Astro.props as Props;

const allPosts =
  directory === "blog"
    ? await parseAndSortBlogPosts()
    : await parseAndSortProjectPosts();

const posts = limit ? allPosts.slice(0, limit) : allPosts;
const showViewAll = limit !== undefined && allPosts.length > limit;
const viewAllHref = `/${directory}`;
const viewAllLabel =
  directory === "blog" ? "View all blog posts →" : "View all projects →";
---

<div class="post-list">
  {
    posts.map((post) => {
      const image = post.frontmatter.image;
      const tags = post.frontmatter.tags ?? [];
      return (
        <a href={post.url} class="post-card" data-tags={JSON.stringify((post.frontmatter.tags ?? []).map((t) => t.toLowerCase()))}>
          {image ? (
            <div class="post-card-grid">
              <div class="post-image-area">
                <img src={image} alt={post.title} class="post-image" />
              </div>
              <div class="post-content">
                <h3 class="post-title">{post.title}</h3>
                <div class="post-tags"><TagList tags={tags} /></div>
                <p class="post-date">{formatDate(post.frontmatter.date)}</p>
                <p class="post-excerpt">{post.excerpt}</p>
              </div>
            </div>
          ) : (
            <div class="post-content">
              <h3 class="post-title">{post.title}</h3>
              <div class="post-tags"><TagList tags={tags} /></div>
              <p class="post-date">{formatDate(post.frontmatter.date)}</p>
              <p class="post-excerpt">{post.excerpt}</p>
            </div>
          )}
        </a>
      );
    })
  }
</div>
{
  showViewAll && (
    <a href={viewAllHref} class="view-all-link">
      {viewAllLabel}
    </a>
  )
}

<style>
  .post-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .post-card {
    padding: 1rem;
    border-radius: var(--radius-card);
    background-color: var(--color-bg-card);
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease;
  }

  .post-card-grid {
    display: grid;
    grid-template-columns: 80px 1fr;
    gap: 1rem;
  }

  .post-card:hover {
    background-color: var(--color-bg-card-hover);
  }

  .post-image-area {
    align-self: center;
    width: 80px;
    flex-shrink: 0;
    border-radius: var(--radius-sm);
    overflow: hidden;
  }

  .post-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .post-content {
    align-self: flex-start;
    min-width: 0;
    display: grid;
    grid-template-areas:
      "title tags"
      "date  date"
      "excerpt excerpt";
    grid-template-columns: 1fr auto;
    column-gap: 0.5rem;
  }

  .post-title {
    grid-area: title;
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin: 0 0 0.25rem 0;
    min-width: 0;
  }

  .post-tags {
    grid-area: tags;
    align-self: start;
  }

  .post-date {
    grid-area: date;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 400;
    margin: 0 0 0.5rem 0;
  }

  .post-excerpt {
    grid-area: excerpt;
    font-size: 0.95rem;
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .view-all-link {
    display: inline-block;
    margin-top: 1rem;
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .view-all-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .post-list {
      gap: 0.75rem;
    }

    .post-card {
      padding: 0.75rem;
    }

    .post-card-grid {
      grid-template-columns: 60px 1fr;
      gap: 0.75rem;
    }

    .post-image-area {
      width: 60px;
      height: 60px;
    }

    .post-content {
      grid-template-areas:
        "title"
        "date"
        "tags"
        "excerpt";
      grid-template-columns: 1fr;
    }

    .post-tags {
      margin-top: 0.35rem;
      margin-bottom: 0.35rem;
    }

    .post-title {
      font-size: 1rem;
    }

    .post-date {
      font-size: 0.8rem;
    }

    .post-excerpt {
      font-size: 0.875rem;
    }
  }
</style>
