---
import { formatDate } from "../lib/post";
import Nav from "./Nav.astro";
import TagList from "./TagList.astro";

interface Props {
  title: string;
  date: string;
  tags?: string | string[];
  backLink?: { href: string; label: string };
}

const { title, date, tags, backLink } = Astro.props as Props;
---

<div class="post-page">
  <Nav backLink={backLink} />
  <article class="post">
    <header class="post-header">
      <h1 class="post-title">{title}</h1>
      <p class="post-date">{formatDate(date)}</p>
      <div class="tag-container">
        <TagList tags={tags} />
      </div>
    </header>
    <div class="post-content">
      <slot />
    </div>

    <footer class="post-footer">
      {
        backLink && (
          <a href={backLink.href} class="back-link">
            ‚Üê {backLink.label}
          </a>
        )
      }
    </footer>
  </article>
</div>

<style>
  .post-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .post {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .post-header {
    margin-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: 1.5rem;
  }

  .post-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-accent);
    margin: 0 0 0.5rem 0;
  }

  .post-date {
    font-size: 0.95rem;
    color: var(--color-text-muted);
    font-weight: 400;
    margin: 0;
  }

  .post-content {
    flex: 1;
    margin-bottom: 2rem;
  }

  /* Markdown content typography */
  .post-content :global(h1),
  .post-content :global(h2),
  .post-content :global(h3),
  .post-content :global(h4),
  .post-content :global(h5),
  .post-content :global(h6) {
    color: var(--color-accent);
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-weight: 600;
  }

  .post-content :global(h1) {
    font-size: 1.75rem;
  }

  .post-content :global(h2) {
    font-size: 1.5rem;
  }

  .post-content :global(h3) {
    font-size: 1.25rem;
  }

  .post-content :global(p) {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .post-content :global(a) {
    color: var(--color-link);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .post-content :global(a:hover) {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .post-content :global(img) {
    max-width: 100%;
    height: auto;
    margin: 1.5rem 0;
    border-radius: 4px;
  }

  .post-content :global(.image-grid) {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px;
    margin: 1rem 0;
  }

  .post-content :global(.image-grid img) {
    width: 100%;
    height: auto;
    margin: 0;
    display: block;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
    margin-left: 1.5rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--color-link);
    margin: 1.5rem 0;
    padding: 1rem 0 1rem 1rem;
    color: var(--color-text-muted);
    font-style: italic;
  }

  .post-content :global(code) {
    background-color: var(--color-primary);
    color: var(--color-text-light);
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
    font-family:
      ui-monospace, "Cascadia Code", "Source Code Pro", Menlo, Consolas,
      "DejaVu Sans Mono", monospace;
    font-size: 0.9em;
  }

  .post-content :global(pre) {
    background-color: var(--color-text-secondary);
    padding: 1rem;
    border-radius: var(--radius-sm);
    overflow-x: auto;
    margin: 1.5rem 0;
    line-height: 1.5;
  }

  .post-content :global(pre code) {
    background-color: transparent;
    color: var(--color-text-light);
    padding: 0;
    border-radius: 0;
  }

  .post-footer {
    border-top: 1px solid var(--color-border);
    padding-top: 1.5rem;
  }

  .back-link {
    color: var(--color-link);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .back-link:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .post-page {
      padding: 1.5rem 1rem;
    }

    .post-title {
      font-size: 1.5rem;
    }

    .post-header {
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
    }

    .post-content :global(h1) {
      font-size: 1.5rem;
    }

    .post-content :global(h2) {
      font-size: 1.25rem;
    }

    .post-content :global(h3) {
      font-size: 1.1rem;
    }

    .post-content :global(p) {
      font-size: 0.95rem;
    }
  }

  .tag-container {
    margin-top: 0.75rem;
  }
</style>
