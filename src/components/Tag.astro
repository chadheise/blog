---
import tagsData from "../lib/tags.json";

interface Props {
  label: string;
  selected?: boolean;
  as?: "span" | "button";
  dataTag?: string;
}

const { label, selected = true, as: asElement = "span", dataTag } = Astro.props as Props;

const tagEmojiMap = new Map(tagsData.map((t) => [t.label.toLowerCase(), t.emoji]));
const emoji = tagEmojiMap.get(label.toLowerCase());
const displayText = emoji ? `${emoji} ${label}` : label;
---

{
  asElement === "button" ? (
    <button class:list={["tag", { selected }]} data-tag={dataTag}>
      {displayText}
    </button>
  ) : (
    <span class="tag selected">{displayText}</span>
  )
}

<style>
  .tag {
    font-size: 0.7rem;
    font-weight: 500;
    padding: 0.2rem 0.55rem;
    border-radius: var(--radius-tag);
    background-color: var(--color-bg-tag);
    color: var(--color-primary);
    white-space: nowrap;
    letter-spacing: 0.02em;
    border: none;
  }

  button.tag {
    cursor: pointer;
    transition: background-color 0.15s ease;
  }

  button.tag:hover {
    opacity: 0.85;
  }

  .tag.selected {
    background-color: var(--color-primary);
    color: var(--color-text-light);
  }
</style>
