---
import notreDameLogo from "../assets/notreDameLogo.svg";
import amazonLogo from "../assets/amazonLogo.svg";
import geHealthcareLogo from "../assets/geHealthcareLogo.svg";
import metaLogo from "../assets/metaLogo.svg";
import PostList from "./PostList.astro";
import Nav from "./Nav.astro";
import Footer from "./Footer.astro";
---

<div class="landing">
  <header class="header" id="page-header">
    <h1 class="name">Chad Heise</h1>
    <p class="tagline">Software Engineer, Hobbyist, Maker</p>
  </header>

  <Nav />

  <main class="content">
    <section id="about" class="section">
      <h2>About</h2>
      <p>
        Welcome to my personal site. I'm a software engineer, hobbyist, and
        maker interested in software, woodworking, 3D printing, running, skiing,
        scuba diving and more.
      </p>
    </section>

    <section id="projects" class="section">
      <div class="section-header-link">
        <h2><a href={"/projects"}>Projects</a></h2>
      </div>
      <PostList directory="projects" limit={3} />
    </section>

    <section id="blog" class="section">
      <div class="section-header-link">
        <h2><a href={"/blog"}>Blog</a></h2>
      </div>
      <PostList directory="blog" limit={3} />
    </section>

    <section id="career" class="section">
      <h2>Career</h2>
      <ul class="career-list">
        <li>
          <img src={metaLogo.src} alt="Meta" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2017-Present</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img
            src={geHealthcareLogo.src}
            alt="GE Healthcare"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2015-2017</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img src={amazonLogo.src} alt="Amazon" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2012-2015</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img
            src={notreDameLogo.src}
            alt="University of Notre Dame"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2008-2012</span>
            <span class="career-role">B.S. in Computer Science</span>
          </div>
        </li>
      </ul>
    </section>
  </main>

  <Footer />
</div>

<style>
  .landing {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .header {
    text-align: center;
    margin-bottom: 1rem;
    padding-top: 2rem;
  }

  .name {
    font-size: 3rem;
    font-weight: 800;
    font-family: var(--font-title);
    margin-bottom: 0.5rem;
    color: var(--color-primary);
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .content {
    flex: 1;
    margin-bottom: 2rem;
  }

  .section {
    margin-bottom: 2.5rem;
    scroll-margin-top: 6rem;
  }

  .section h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: var(--color-accent);
  }

  .section p {
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .section a {
    color: var(--color-link);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .section a:hover {
    color: var(--color-link-hover);
    text-decoration: underline;
  }

  .section-header-link a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .section-header-link a:hover {
    color: var(--color-accent-dark);
    text-decoration: none;
  }

  .featured-app {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: var(--radius-card);
    background-color: var(--color-bg-card);
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease;
  }

  .featured-app:hover {
    background-color: var(--color-bg-card-hover);
  }

  .app-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    border-radius: 12px;
  }

  .app-info {
    flex: 1;
  }

  .app-name {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .app-description {
    font-size: 0.925rem;
    color: var(--color-text-muted);
    line-height: 1.6;
    margin: 0;
  }

  .career-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .career-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-text-secondary);
    line-height: 1.8;
    margin-bottom: 0.75rem;
  }

  .career-info {
    display: flex;
    flex-direction: column;
    gap: 0.075rem;
  }

  .career-date {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    font-weight: 400;
  }

  .career-role {
    font-weight: 500;
    color: var(--color-primary);
  }

  .company-icon {
    height: 40px;
    flex-shrink: 0;
    border-radius: 3px;
    object-fit: contain;
  }


  @media (max-width: 600px) {
    .landing {
      padding: 1.5rem 1rem;
    }

    .name {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .nav {
      gap: 1rem;
      flex-direction: column;
      align-items: center;
    }

    .section h2 {
      font-size: 1.5rem;
    }
  }
</style>

<script>
  const pageHeader = document.getElementById("page-header");
  const siteName = document.querySelector<HTMLElement>(".site-name");

  if (pageHeader && siteName) {
    const header = pageHeader;
    const name = siteName;

    function updateOpacities() {
      const rect = header.getBoundingClientRect();
      // As the bottom of the header reaches the top of the viewport, opacity goes 1 â†’ 0
      const headerOpacity = Math.max(0, Math.min(1, rect.bottom / rect.height));
      header.style.opacity = String(headerOpacity);
      name.style.opacity = String(1 - headerOpacity);
    }

    updateOpacities();
    window.addEventListener("scroll", updateOpacities, { passive: true });
  }
</script>
