---
import Tag from "./Tag.astro";

interface Props {
  tags?: string | string[];
}

const { tags: rawTags } = Astro.props as Props;

let tags: string[] = [];
if (typeof rawTags === "string") {
  tags = rawTags
    .split(",")
    .map((t) => t.trim())
    .filter(Boolean);
} else if (Array.isArray(rawTags)) {
  tags = rawTags;
}
---

{
  tags.length > 0 && (
    <div class="tag-list">
      {tags.map((tag) => (
        <Tag label={tag} />
      ))}
    </div>
  )
}

<style>
  .tag-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    align-items: flex-start;
  }
</style>
