---
import notreDameLogo from "../assets/notreDameLogo.svg";
import amazonLogo from "../assets/amazonLogo.svg";
import geHealthcareLogo from "../assets/geHealthcareLogo.svg";
import metaLogo from "../assets/metaLogo.svg";
import paceCalcIcon from "../assets/quickPaceCalcIcon.svg";
import BlogList from "./BlogList.astro";
---

<div class="landing">
  <header class="header">
    <h1 class="name">Chad Heise</h1>
    <p class="tagline">Software Engineer, Hobbyist, Maker</p>
    <ul class="contact-links">
      <li>
        <a
          href="https://github.com/chadheise"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="GitHub"
          class="icon-link"
        >
          <svg
            class="icon"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              fill="#3E8CE6"></path>
          </svg>
          <span class="icon-label">GitHub</span>
        </a>
      </li>
      <li>
        <a
          href="https://www.thingiverse.com/fivefives/designs"
          target="_blank"
          rel="noopener noreferrer"
          aria-label="Thingiverse"
          class="icon-link"
        >
          <svg
            class="icon"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 32 32"
            fill="none"
          >
            <path
              fill-rule="evenodd"
              clip-rule="evenodd"
              d="M30.9681 0H1.02583C0.458608 0 0 0.458695 0 1.02603V30.974C0 31.5413 0.458608 32 1.02583 32H11.4531C12.0204 32 12.479 31.5413 12.479 30.974V13.0668C12.479 12.928 12.3643 12.8133 12.2255 12.8133H4.24213C4.10334 12.8133 3.98869 12.6986 3.98869 12.5598V6.02942C3.98869 5.89061 4.10334 5.77593 4.24213 5.77593H27.7518C27.8906 5.77593 28.0053 5.89061 28.0053 6.02942V12.5598C28.0053 12.6986 27.8906 12.8133 27.7518 12.8133H19.7745C19.6357 12.8133 19.521 12.928 19.521 13.0668V30.974C19.521 31.5413 19.9796 32 20.5469 32H30.9742C31.5414 32 32 31.5413 32 30.974V1.02603C32 0.458695 31.5414 0 30.9742 0H30.9681Z"
              fill="#3E8CE6"></path>
          </svg>
          <span class="icon-label">Thingiverse</span>
        </a>
      </li>
    </ul>
  </header>

  <nav class="nav">
    <a href="#about" class="nav-link">About</a>
    <a href="#projects" class="nav-link">Projects</a>
    <a href="#blog" class="nav-link">Blog</a>
    <a href="#career" class="nav-link">Career</a>
  </nav>

  <main class="content">
    <section id="about" class="section">
      <h2>About</h2>
      <p>
        Welcome to my personal site. I'm a software engineer, hobbyist, and maker
        interested in software, woodworking, 3D printing, running, skiing, scuba diving and more.
      </p>
    </section>

    <section id="projects" class="section">
      <h2>Projects</h2>
      <a href="https://github.com/chadheise/pace-calc" target="_blank" rel="noopener noreferrer" class="featured-app">
        <img src={paceCalcIcon.src} alt="Quick Pace Calc" class="app-icon" />
        <div class="app-info">
          <h3 class="app-name">Quick Pace Calc</h3>
          <p class="app-description">
            An iOS app for runners to quickly calculate pace, speed, and
            distance. Perfect for estimating race times based on previous runs.
          </p>
        </div>
      </a>
    </section>

    </section>

    <section id="career" class="section">
      <h2>Career</h2>
      <ul class="career-list">
        <li>
          <img
            src={notreDameLogo.src}
            alt="University of Notre Dame"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2012</span>
            <span class="career-role">B.S. in Computer Science</span>
          </div>
        </li>
        <li>
          <img src={amazonLogo.src} alt="Amazon" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2012-2015</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img
            src={geHealthcareLogo.src}
            alt="GE Healthcare"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2015-2017</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img src={metaLogo.src} alt="Meta" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2017-Present</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
      </ul>
    </section>
  </main>

  <footer class="footer">
    <p>&copy; 2026 Chad Heise. All rights reserved.</p>
  </footer>
</div>

<style>
  .landing {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 2rem;
  }

  .name {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #62664F;
  }

  .tagline {
    font-size: 1.25rem;
    color: #5A738F;
    font-weight: 400;
    margin-bottom: 1.5rem;
  }

  .nav {
    display: flex;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .nav-link {
    text-decoration: none;
    color: #3E8CE6;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: #2A5FA8;
    text-decoration: underline;
  }

  .content {
    flex: 1;
    margin-bottom: 2rem;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #E64C3E;
  }

  .section p {
    color: #3E3E3E;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .section a {
    color: #3E8CE6;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .section a:hover {
    color: #2A5FA8;
    text-decoration: underline;
  }

  .featured-app {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: 8px;
    background-color: #E5DDD4;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease;
  }

  .featured-app:hover {
    background-color: #DDD5CC;
  }

  .app-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    border-radius: 12px;
  }

  .app-info {
    flex: 1;
  }

  .app-name {
    font-size: 1rem;
    font-weight: 600;
    color: #62664F;
    margin-bottom: 0.5rem;
  }

  .app-description {
    font-size: 0.925rem;
    color: #5A738F;
    line-height: 1.6;
    margin: 0;
  }

  .career-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .career-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #3E3E3E;
    line-height: 1.8;
    margin-bottom: 0.75rem;
  }

  .career-info {
    display: flex;
    flex-direction: column;
    gap: 0.075rem;
  }

  .career-date {
    font-size: 0.875rem;
    color: #5A738F;
    font-weight: 400;
  }

  .career-role {
    font-weight: 500;
    color: #62664F;
  }

  .company-icon {
    height: 40px;
    flex-shrink: 0;
    border-radius: 3px;
    object-fit: contain;
  }

  .contact-links {
    list-style: none;
    display: flex;
    gap: 2rem;
    margin: 0;
    padding: 0;
    justify-content: center;
  }

  .icon-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    text-decoration: none;
    transition: transform 0.2s ease;
    gap: 0.5rem;
  }

  .icon-link:hover {
    transform: scale(1.1);
  }

  .icon {
    width: 32px;
    height: 32px;
    display: block;
  }

  .icon-label {
    font-size: 0.875rem;
    color: #3E8CE6;
    font-weight: 500;
    text-align: center;
  }

  .footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #DDD8CF;
    color: #5A738F;
    font-size: 0.9rem;
  }

  @media (max-width: 600px) {
    .landing {
      padding: 1.5rem 1rem;
    }

    .name {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .nav {
      gap: 1rem;
      flex-direction: column;
      align-items: center;
    }

    .section h2 {
      font-size: 1.5rem;
    }

    .contact-links {
      gap: 1.5rem;
    }

    .icon {
      width: 28px;
      height: 28px;
    }

    .icon-label {
      font-size: 0.75rem;
    }
  }
</style>
