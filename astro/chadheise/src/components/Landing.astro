---
import notreDameLogo from "../assets/notreDameLogo.svg";
import amazonLogo from "../assets/amazonLogo.svg";
import geHealthcareLogo from "../assets/geHealthcareLogo.svg";
import metaLogo from "../assets/metaLogo.svg";
import paceCalcIcon from "../assets/quickPaceCalcIcon.svg";
import BlogList from "./BlogList.astro";
import Nav from "./Nav.astro";
---

<div class="landing">
  <header class="header">
    <h1 class="name">Chad Heise</h1>
    <p class="tagline">Software Engineer, Hobbyist, Maker</p>
  </header>

  <Nav />

  <main class="content">
    <section id="about" class="section">
      <h2>About</h2>
      <p>
        Welcome to my personal site. I'm a software engineer, hobbyist, and
        maker interested in software, woodworking, 3D printing, running, skiing,
        scuba diving and more.
      </p>
    </section>

    <section id="projects" class="section">
      <h2>Projects</h2>
      <a
        href="https://github.com/chadheise/pace-calc"
        target="_blank"
        rel="noopener noreferrer"
        class="featured-app"
      >
        <img src={paceCalcIcon.src} alt="Quick Pace Calc" class="app-icon" />
        <div class="app-info">
          <h3 class="app-name">Quick Pace Calc</h3>
          <p class="app-description">
            An iOS app for runners to quickly calculate pace, speed, and
            distance. Perfect for estimating race times based on previous runs.
          </p>
        </div>
      </a>
    </section>

    <section id="blog" class="section">
      <h2>Blog</h2>
      <BlogList limit={3} />
    </section>

    <section id="career" class="section">
      <h2>Career</h2>
      <ul class="career-list">
        <li>
          <img
            src={notreDameLogo.src}
            alt="University of Notre Dame"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2012</span>
            <span class="career-role">B.S. in Computer Science</span>
          </div>
        </li>
        <li>
          <img src={amazonLogo.src} alt="Amazon" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2012-2015</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img
            src={geHealthcareLogo.src}
            alt="GE Healthcare"
            class="company-icon"
          />
          <div class="career-info">
            <span class="career-date">2015-2017</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
        <li>
          <img src={metaLogo.src} alt="Meta" class="company-icon" />
          <div class="career-info">
            <span class="career-date">2017-Present</span>
            <span class="career-role">Software Engineer</span>
          </div>
        </li>
      </ul>
    </section>
  </main>

  <footer class="footer">
    <p>&copy; 2026 Chad Heise. All rights reserved.</p>
  </footer>
</div>

<style>
  .landing {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }

  .header {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 2rem;
  }

  .name {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #62664f;
  }

  .tagline {
    font-size: 1.25rem;
    color: #5a738f;
    font-weight: 400;
  }

  .content {
    flex: 1;
    margin-bottom: 2rem;
  }

  .section {
    margin-bottom: 2.5rem;
  }

  .section h2 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #e64c3e;
  }

  .section p {
    color: #3e3e3e;
    line-height: 1.8;
    margin-bottom: 1rem;
  }

  .section a {
    color: #3e8ce6;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .section a:hover {
    color: #2a5fa8;
    text-decoration: underline;
  }

  .featured-app {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin-top: 1.5rem;
    padding: 1rem;
    border-radius: 8px;
    background-color: #e5ddd4;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease;
  }

  .featured-app:hover {
    background-color: #ddd5cc;
  }

  .app-icon {
    width: 60px;
    height: 60px;
    flex-shrink: 0;
    border-radius: 12px;
  }

  .app-info {
    flex: 1;
  }

  .app-name {
    font-size: 1rem;
    font-weight: 600;
    color: #62664f;
    margin-bottom: 0.5rem;
  }

  .app-description {
    font-size: 0.925rem;
    color: #5a738f;
    line-height: 1.6;
    margin: 0;
  }

  .career-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .career-list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #3e3e3e;
    line-height: 1.8;
    margin-bottom: 0.75rem;
  }

  .career-info {
    display: flex;
    flex-direction: column;
    gap: 0.075rem;
  }

  .career-date {
    font-size: 0.875rem;
    color: #5a738f;
    font-weight: 400;
  }

  .career-role {
    font-weight: 500;
    color: #62664f;
  }

  .company-icon {
    height: 40px;
    flex-shrink: 0;
    border-radius: 3px;
    object-fit: contain;
  }

  .footer {
    text-align: center;
    padding-top: 2rem;
    border-top: 1px solid #ddd8cf;
    color: #5a738f;
    font-size: 0.9rem;
  }

  @media (max-width: 600px) {
    .landing {
      padding: 1.5rem 1rem;
    }

    .name {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1rem;
    }

    .nav {
      gap: 1rem;
      flex-direction: column;
      align-items: center;
    }

    .section h2 {
      font-size: 1.5rem;
    }

  }
</style>
