---
import { parseAndSortBlogPosts, formatDate } from '../lib/blog';

interface Props {
  limit?: number;
}

const { limit } = Astro.props as Props;
const allPosts = await parseAndSortBlogPosts();
const posts = limit ? allPosts.slice(0, limit) : allPosts;
const showViewAll = limit !== undefined && allPosts.length > limit;
---

<div class="blog-list">
  {posts.map((post) => (
    <a href={post.url} class="blog-card">
      <div class="blog-card-content">
        <h3 class="blog-title">{post.title}</h3>
        <p class="blog-date">{formatDate(post.frontmatter.date)}</p>
        <p class="blog-excerpt">{post.excerpt}</p>
      </div>
    </a>
  ))}
</div>
{showViewAll && (
  <a href="/blog" class="view-all-link">View all blog posts â†’</a>
)}

<style>
  .blog-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .blog-card {
    display: flex;
    gap: 1rem;
    align-items: flex-start;
    margin: 0;
    padding: 1rem;
    border-radius: 8px;
    background-color: #E5DDD4;
    text-decoration: none;
    color: inherit;
    transition: background-color 0.2s ease;
  }

  .blog-card:hover {
    background-color: #DDD5CC;
  }

  .blog-card-content {
    flex: 1;
  }

  .blog-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #62664F;
    margin: 0 0 0.25rem 0;
  }

  .blog-date {
    font-size: 0.875rem;
    color: #5A738F;
    font-weight: 400;
    margin: 0 0 0.5rem 0;
  }

  .blog-excerpt {
    font-size: 0.95rem;
    color: #3E3E3E;
    line-height: 1.6;
    margin: 0;
  }

  .view-all-link {
    display: inline-block;
    margin-top: 1rem;
    color: #3E8CE6;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
  }

  .view-all-link:hover {
    color: #2A5FA8;
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .blog-list {
      gap: 0.75rem;
    }

    .blog-card {
      padding: 0.75rem;
    }

    .blog-title {
      font-size: 1rem;
    }

    .blog-date {
      font-size: 0.8rem;
    }

    .blog-excerpt {
      font-size: 0.875rem;
    }
  }
</style>
